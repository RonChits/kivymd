<TabToDo>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        MDLabel:
            text: "To-Do List"
            halign: 'center'
            font_style: 'H5'
            size_hint_y: None
            height: self.texture_size[1]

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)

            MDTextField:
                id: task_input
                hint_text: "New task"
                size_hint_x: 0.7
                mode: "rectangle"

            MDRaisedButton:
                text: "Add"
                size_hint_x: 0.3
                on_release: root.add_task()

        ScrollView:
            canvas.before:
                Color:
                    rgba: get_color_from_hex("#ffffff")
                Rectangle:
                    size: self.size
                    pos: self.pos

            MDList:
                id: task_list
                spacing: dp(5)
                canvas.before:
                    Color:
                        rgba: get_color_from_hex("#f5f5f5")
                    Rectangle:
                        size: self.size
                        pos: self.pos
<TabInfo>:
