        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)

        MDLabel:
            text: "App Information"
            halign: 'center'
            font_style: 'H5'
            size_hint_y: None
            height: self.texture_size[1]

        Image:
            source: 'logo.png'
            size_hint: (6, 6)
            pos_hint: {'center_x': 0.5}

        MDLabel:
            text: "Welcome to the Modern KivyMD App!"
            halign: 'center'
            font_style: 'Subtitle1'

        MDRaisedButton:
            text: "About"
            size_hint_x: 0.5
            pos_hint: {'center_x': 0.5}
            on_release: root.show_about()